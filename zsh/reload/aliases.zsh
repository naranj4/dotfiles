################################################################################
# ZSH Aliases
################################################################################

# list files
alias ls="ls -GF"
alias ll="ls -l"
alias la="ls -la"

# Git aliases
alias gs="git status"
alias gd="git diff"

alias gp="git pull"

alias ga="git add"
alias gc="git commit"
alias gcf="git commit --fixup"
alias gr="git rebase"
alias grf="git rebase --autosquash"

alias gb="git branch"
alias gco="git checkout"

alias glg="git log --oneline"
alias ggr="git graph"
alias ghst="git hist"
